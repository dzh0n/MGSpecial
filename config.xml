<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.mg.special" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Мужичок-грузовичок Спецтехника</name>
    <description>
        Приложение сайта мужичок-грузовичок.рф
    </description>
    <author email="on3473@gmail.com" href="https://xn----dtbckhdelflyecx2bh6dk.xn--p1ai">
        Мужичок-грузовичок
    </author>
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="android-compileSdkVersion" value="26" />

    <plugin name="onesignal-cordova-plugin" spec="^2.4.1" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.4.2" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
    <plugin name="cordova-plugin-dialogs" spec="~2.0.1" />
    <plugin name="cordova-plugin-device" spec="~2.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="orientation" value="portrait"/>
    <preference name="StatusBarOverlaysWebView" value="true" />

    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" launch-external="yes" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
